<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="feedModel"
            type="com.jxntv.media.model.MediaModel" />

        <import type="android.view.View" />
    </data>

    <com.jxntv.widget.GVideoConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_F2F2F2"
        android:paddingStart="@dimen/DIMEN_10DP"
        android:paddingTop="@dimen/DIMEN_10DP"
        android:paddingEnd="@dimen/DIMEN_10DP"
        android:paddingBottom="@dimen/DIMEN_10DP">

        <com.jxntv.widget.GVideoRLinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:background_normal="@color/white"
            android:orientation="vertical"
            app:corner_radius="@dimen/DIMEN_4DP"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.jxntv.widget.GVideoRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_10DP"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </com.jxntv.widget.GVideoRLinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_96DP"
            android:background="@color/white"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            app:cardCornerRadius="@dimen/DIMEN_4DP"
            app:cardElevation="@dimen/DIMEN_0DP"
            app:layout_constraintTop_toBottomOf="@id/layout"
            app:layout_constraintStart_toEndOf="@id/layout">

            <com.jxntv.widget.GVideoBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_96DP" />

        </androidx.cardview.widget.CardView>

    </com.jxntv.widget.GVideoConstraintLayout>

</layout>