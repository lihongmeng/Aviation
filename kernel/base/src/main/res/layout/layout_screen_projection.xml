<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_screen_projection">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/DIMEN_40DP"
            android:layout_height="@dimen/DIMEN_40DP"
            android:src="@drawable/ic_back_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/is_screen_projection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_41DP"
            android:text="@string/is_screen_projection"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_19"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_2DP"
            android:text="@string/is_screen_projection"
            android:textColor="@color/color_ffffff_50"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/is_screen_projection" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/end"
            android:layout_width="@dimen/DIMEN_122DP"
            android:layout_height="@dimen/DIMEN_34DP"
            android:layout_marginTop="@dimen/DIMEN_51DP"
            android:background="@drawable/shape_solid_ffffff_12_corners_200dp"
            android:gravity="center"
            android:text="@string/end_screen_projection"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
