<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <com.hzlz.aviation.library.widget.widget.GvideoRConstraintLayout
        app:corner_radius="@dimen/DIMEN_4DP"
        app:background_normal="@color/c_f7f8fc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.hzlz.aviation.library.widget.widget.GVideoRImageView
            android:id="@+id/image"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_100DP"
            android:adjustViewBounds="true"
            app:corner_radius="@dimen/DIMEN_4DP"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_max="@dimen/DIMEN_171DP"
            app:layout_constraintHeight_min="@dimen/DIMEN_96DP"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="@dimen/DIMEN_171DP"
            app:layout_constraintWidth_min="@dimen/DIMEN_96DP" />

        <com.hzlz.aviation.library.widget.widget.GVideoImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/DIMEN_18DP"
            android:layout_height="@dimen/DIMEN_18DP"
            android:src="@drawable/icon_delete"
            app:layout_constraintRight_toRightOf="@id/image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hzlz.aviation.library.widget.widget.GVideoTextView
            android:id="@+id/replace"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_20DP"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintRight_toRightOf="@id/image"
            app:layout_constraintLeft_toLeftOf="@id/image"
            android:text="@string/replace"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/color_FFFFFF"
            android:background="@drawable/shape_item_publish_image_list_replace" />

    </com.hzlz.aviation.library.widget.widget.GvideoRConstraintLayout>


</layout>