<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_ll_head"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/progress_iv_thumbnail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      />

  <TextView
      android:id="@+id/progress_tv_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=""
      android:textColor="@color/white"
      android:textSize="16sp"
      />

  <com.hzlz.aviation.library.widget.widget.AviationTextView
      android:id="@+id/retry"
      android:visibility="gone"
      tools:visibility="visible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/liteav_retry_bg_red"
      android:text="@string/liteav_retry"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:drawableLeft="@drawable/liteav_retry"
      android:layout_marginTop="@dimen/DIMEN_16DP"
      />

  <ProgressBar
      android:id="@+id/progress_pb_bar"
      style="@style/AppProgressBarStyle"
      android:layout_width="@dimen/DIMEN_100DP"
      android:layout_height="2dp"
      android:layout_marginTop="8dp"
      android:max="100"
      android:progress="0"
      android:progressDrawable="@drawable/liteav_laylist_video_progress"
      />
</LinearLayout>


