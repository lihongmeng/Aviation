<?xml version="1.0" encoding="utf-8"?>
<com.hzlz.aviation.library.widget.widget.AviationConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <com.hzlz.aviation.library.widget.widget.AviationImageView
      android:id="@+id/bg_cover"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <View
      android:id="@+id/bg_sound_cover"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintDimensionRatio="16:9"
      />
  <com.hzlz.aviation.library.widget.widget.CommonRoundImageView
      android:id="@+id/sound_back_cover"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:scaleType="centerCrop"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@id/bg_sound_cover"
      app:layout_constraintDimensionRatio="13:9"
      app:layout_constraintLeft_toLeftOf="@id/bg_sound_cover"
      app:layout_constraintTop_toTopOf="@id/bg_sound_cover"
      />
  <com.hzlz.aviation.library.widget.widget.CommonRoundImageView
      android:id="@+id/sound_cover"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:adjustViewBounds="true"
      android:src="@drawable/liteav_fm_cover"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="@id/bg_sound_cover"
      app:layout_constraintRight_toRightOf="@id/bg_sound_cover"
      app:layout_constraintTop_toTopOf="@id/bg_sound_cover"
      />
  <com.hzlz.aviation.kernel.liteav.view.SoundWaveView
      android:id="@+id/sound_wave_anim"
      android:layout_width="@dimen/feed_sound_wave_width"
      android:layout_height="@dimen/feed_sound_wave_height"
      android:layout_marginLeft="@dimen/feed_sound_wave_margin"
      android:layout_marginBottom="@dimen/feed_sound_wave_margin"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      />
</com.hzlz.aviation.library.widget.widget.AviationConstraintLayout>