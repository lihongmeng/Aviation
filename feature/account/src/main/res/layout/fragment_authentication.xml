<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
        name="viewModel"
        type="com.jxntv.account.ui.authentication.AuthenticationViewModel"
        />
    <variable
        name="binding"
        type="com.jxntv.account.ui.authentication.AuthenticationDataBinding"
        />
  </data>
  <com.jxntv.widget.GVideoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <com.jxntv.widget.GVideoScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_bg01"
        android:fillViewport="true"
        >
      <com.jxntv.widget.GVideoLinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
        <!--身份证号-->
        <com.jxntv.widget.GVideoLinearLayout
            style="@style/FragmentAuthenticationStyle.IdCardNumberContainer"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
          <com.jxntv.widget.GVideoTextView
              style="@style/FragmentAuthenticationStyle.IdCardNumberLabel"
              android:text="@string/all_id_card_number"
              />
          <com.jxntv.widget.GVideoClearableEditText
              android:id="@+id/edit_text_id_card_number"
              style="@style/FragmentAuthenticationStyle.IdCardNumber"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:hint="@string/fragment_authentication_id_card_hint"
              android:text="@={binding.idCardNumber}"
              />
        </com.jxntv.widget.GVideoLinearLayout>
        <com.jxntv.widget.GVideoLinearLayout
            style="@style/FragmentAuthenticationStyle.UploadPictureContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
          <com.jxntv.widget.GVideoTextView
              style="@style/FragmentAuthenticationStyle.UploadPictureTitle"
              android:text="@string/all_upload_picture"
              />
          <!--身份证姓名面照片-->
          <com.jxntv.widget.GVideoConstraintLayout
              style="@style/FragmentAuthenticationStyle.PictureContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:onClick="@{(v)->viewModel.selectIdCardFrontPicture(v)}"
              >
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_front_example"
                style="@style/FragmentAuthenticationStyle.PictureExample"
                android:src="@drawable/ic_id_card_front"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_front_plus"
                style="@style/FragmentAuthenticationStyle.PicturePlus"
                app:layout_constraintBottom_toTopOf="@+id/text_view_upload_id_card_front"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <com.jxntv.widget.GVideoTextView
                android:id="@+id/text_view_upload_id_card_front"
                style="@style/FragmentAuthenticationStyle.PictureTip"
                android:text="@string/fragment_authentication_upload_id_card_front_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/image_view_id_card_front_plus"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_front_plus"
                app:layout_constraintTop_toBottomOf="@id/image_view_id_card_front_plus"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_front"
                style="@style/FragmentAuthenticationStyle.PictureReal"
                android:visibility="@{binding.idCardFrontVisibility}"
                app:forceLoad="@{true}"
                app:imageData="@{binding.idCardFrontUri}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                style="@style/FragmentAuthenticationStyle.PictureClear"
                android:onClick="@{()->viewModel.clearIdCardFrontPicture()}"
                android:visibility="@{binding.idCardFrontVisibility}"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_front"
                app:layout_constraintTop_toTopOf="@id/image_view_id_card_front"
                />
          </com.jxntv.widget.GVideoConstraintLayout>
          <!--身份证国徽面照片-->
          <com.jxntv.widget.GVideoConstraintLayout
              style="@style/FragmentAuthenticationStyle.PictureContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:onClick="@{(v)->viewModel.selectIdCardBackPicture(v)}"
              >
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_back_example"
                style="@style/FragmentAuthenticationStyle.PictureExample"
                android:src="@drawable/ic_id_card_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_back_plus"
                style="@style/FragmentAuthenticationStyle.PicturePlus"
                app:layout_constraintBottom_toTopOf="@+id/text_view_upload_id_card_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <com.jxntv.widget.GVideoTextView
                android:id="@+id/text_view_upload_id_card_back"
                style="@style/FragmentAuthenticationStyle.PictureTip"
                android:text="@string/fragment_authentication_upload_id_card_back_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/image_view_id_card_back_plus"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_back_plus"
                app:layout_constraintTop_toBottomOf="@id/image_view_id_card_back_plus"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_back"
                style="@style/FragmentAuthenticationStyle.PictureReal"
                android:visibility="@{binding.idCardBackVisibility}"
                app:forceLoad="@{true}"
                app:imageData="@{binding.idCardBackUri}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                style="@style/FragmentAuthenticationStyle.PictureClear"
                android:onClick="@{()->viewModel.clearIdCardBackPicture()}"
                android:visibility="@{binding.idCardBackVisibility}"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_back"
                app:layout_constraintTop_toTopOf="@id/image_view_id_card_back"
                />
          </com.jxntv.widget.GVideoConstraintLayout>
          <!--手持身份证照片-->
          <com.jxntv.widget.GVideoConstraintLayout
              style="@style/FragmentAuthenticationStyle.PictureContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:onClick="@{(v)->viewModel.selectIdCardSelfPicture(v)}"
              >
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_self_example"
                style="@style/FragmentAuthenticationStyle.PictureExample"
                android:src="@drawable/ic_id_card_self"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_self_plus"
                style="@style/FragmentAuthenticationStyle.PicturePlus"
                app:layout_constraintBottom_toTopOf="@+id/text_view_upload_id_card_self"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                />
            <com.jxntv.widget.GVideoTextView
                android:id="@+id/text_view_upload_id_card_self"
                style="@style/FragmentAuthenticationStyle.PictureTip"
                android:text="@string/fragment_authentication_upload_id_card_self_picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/image_view_id_card_self_plus"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_self_plus"
                app:layout_constraintTop_toBottomOf="@id/image_view_id_card_self_plus"
                />
            <com.jxntv.widget.GVideoImageView
                android:id="@+id/image_view_id_card_self"
                style="@style/FragmentAuthenticationStyle.PictureReal"
                android:visibility="@{binding.idCardSelfVisibility}"
                app:forceLoad="@{true}"
                app:imageData="@{binding.idCardSelfUri}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <com.jxntv.widget.GVideoImageView
                style="@style/FragmentAuthenticationStyle.PictureClear"
                android:onClick="@{()->viewModel.clearIdCardSelfPicture()}"
                android:visibility="@{binding.idCardSelfVisibility}"
                app:layout_constraintRight_toRightOf="@id/image_view_id_card_self"
                app:layout_constraintTop_toTopOf="@id/image_view_id_card_self"
                />
          </com.jxntv.widget.GVideoConstraintLayout>
          <!--提交-->
          <com.jxntv.widget.GVideoButton
              style="@style/FragmentAuthenticationStyle.Submit"
              android:layout_width="match_parent"
              android:enabled="@{binding.enableSubmit}"
              android:onClick="@{(v)->viewModel.submitAuthentication(v)}"
              android:text="@string/fragment_authentication_submit"
              />
        </com.jxntv.widget.GVideoLinearLayout>
        <!--注意事项-->
        <TextView
            style="@style/FragmentAuthenticationStyle.Attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_authentication_attention"
            />
      </com.jxntv.widget.GVideoLinearLayout>
    </com.jxntv.widget.GVideoScrollView>
  </com.jxntv.widget.GVideoFrameLayout>
</layout>
