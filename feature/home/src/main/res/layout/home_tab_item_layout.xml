<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.jxntv.base.view.GvideoLottieAnimationView
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/home_tab_img_width"
        android:layout_height="@dimen/home_tab_img_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jxntv.widget.GVideoTextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/home_tab_text_color"
        android:textSize="@dimen/home_tab_title_size"
        android:layout_marginBottom="@dimen/DIMEN_6DP"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.jxntv.widget.GVideoImageView
        android:id="@+id/tab_unread"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unread"
        app:layout_constraintCircle="@id/tab_icon"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintRight_toRightOf="@id/tab_icon"
        app:layout_constraintTop_toTopOf="@id/tab_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>