<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/DIMEN_360DP"
    android:layout_height="@dimen/DIMEN_640DP"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_f6f6f6">

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/share_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_share_bg_top_right" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/share_bg_bottom_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_top_right"
        android:background="@drawable/icon_share_bg_bottom_left" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/DIMEN_34DP"
        android:layout_marginTop="@dimen/DIMEN_23DP"
        android:layout_marginRight="@dimen/DIMEN_34DP"
        android:layout_marginBottom="@dimen/DIMEN_119DP"
        android:background="@drawable/layer_list_ffffff_000000_10_shift_1dp_corners_20dp" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/bill_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_49DP"
        android:layout_marginTop="@dimen/DIMEN_38DP"
        android:scaleType="fitStart"
        android:layout_marginRight="@dimen/DIMEN_49DP"
        android:background="@drawable/shape_solid_f0f0f0_corners_10dp_stroke_1dp"
        android:padding="@dimen/DIMEN_1DP" />

    <View
        android:id="@+id/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_106DP"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ffffff" />

    <View
        android:id="@+id/holder"
        android:layout_width="@dimen/DIMEN_77DP"
        android:layout_height="@dimen/DIMEN_14DP"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/white_bg" />


    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/qr_code_bg"
        android:layout_width="@dimen/DIMEN_77DP"
        android:layout_height="@dimen/DIMEN_77DP"
        android:layout_above="@id/holder"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/DIMEN_24DP"
        android:background="@drawable/layer_list_ffffff_000000_10_shift_1dp_corners_8dp" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/qr_code"
        android:layout_width="@dimen/DIMEN_69DP"
        android:layout_height="@dimen/DIMEN_69DP"
        android:layout_alignStart="@id/qr_code_bg"
        android:layout_alignTop="@id/qr_code_bg"
        android:layout_marginStart="@dimen/DIMEN_4DP"
        android:layout_marginTop="@dimen/DIMEN_4DP"
        android:background="@drawable/icon_qr_code_share" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/gviv_share_bottom_left"
        android:layout_width="@dimen/DIMEN_24DP"
        android:layout_height="@dimen/DIMEN_24DP"
        android:layout_alignTop="@id/qr_code_bg"
        android:layout_marginLeft="@dimen/DIMEN_24DP"
        android:layout_marginTop="@dimen/DIMEN_6DP"
        android:background="@drawable/ic_launcher_round" />

    <com.hzlz.aviation.library.widget.widget.GVideoTextView
        android:id="@+id/tv_gviv_share_bottom_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_24DP"
        android:layout_alignTop="@id/gviv_share_bottom_left"
        android:layout_toLeftOf="@id/qr_code_bg"
        android:layout_toRightOf="@id/gviv_share_bottom_left"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_10DP"
        android:singleLine="true"
        android:text="@string/jsp_space_is_by_your_side"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <com.hzlz.aviation.library.widget.widget.GVideoTextView
        android:id="@+id/long_press_qr_code_join"
        android:layout_width="@dimen/DIMEN_173DP"
        android:layout_height="@dimen/DIMEN_27DP"
        android:layout_alignStart="@id/gviv_share_bottom_left"
        android:layout_alignBottom="@id/qr_code_bg"
        android:layout_marginBottom="@dimen/DIMEN_11DP"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_13DP"
        android:paddingRight="@dimen/DIMEN_13DP"
        android:background="@drawable/icon_long_press_qr_code_join_bg"
        android:text="@string/long_press_qr_code_join"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:layout_width="@dimen/DIMEN_30DP"
        android:layout_height="@dimen/DIMEN_27DP"
        android:layout_alignBottom="@id/qr_code_bg"
        android:layout_marginRight="@dimen/DIMEN_30DP"
        android:layout_marginBottom="@dimen/DIMEN_11DP"
        android:layout_toLeftOf="@id/qr_code_bg"
        android:scaleType="center"
        android:src="@drawable/icon_share_bottom_right" />

    <View
        android:id="@+id/bottom_place_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_13DP"
        android:layout_above="@id/bottom_bg"
        android:background="@color/color_f6f6f6" />

    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_58DP"
        android:layout_above="@id/bottom_place_holder"
        android:layout_marginLeft="@dimen/DIMEN_19DP"
        android:layout_marginRight="@dimen/DIMEN_19DP"
        android:background="@drawable/shape_gradient_ffac92_ffbf6c_corners_200dp">

        <com.hzlz.aviation.library.widget.widget.GVideoRImageView
            android:id="@+id/header"
            android:layout_width="@dimen/DIMEN_38DP"
            android:layout_height="@dimen/DIMEN_38DP"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_14DP"
            android:layout_marginLeft="@dimen/DIMEN_14DP"
            app:corner_radius="@dimen/DIMEN_38DP" />

        <com.hzlz.aviation.library.widget.widget.GVideoTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/header"
            android:layout_marginLeft="@dimen/DIMEN_8DP"
            android:layout_toRightOf="@id/header"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            tools:text="世界小王子" />

        <com.hzlz.aviation.library.widget.widget.GVideoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header"
            android:layout_marginLeft="@dimen/DIMEN_8DP"
            android:layout_toRightOf="@id/header"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/i_join_jsp_already"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

</RelativeLayout>
