<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_000000_100"
        android:orientation="vertical">

        <com.hzlz.aviation.library.widget.widget.AviationImageView
            android:id="@+id/bill_content"
            android:layout_width="@dimen/DIMEN_288DP"
            android:layout_height="@dimen/DIMEN_512DP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_27DP" />

        <com.hzlz.aviation.library.widget.widget.AviationImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignRight="@id/bill_content"
            android:src="@drawable/icon_share_close"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button"
            android:layout_width="@dimen/DIMEN_216DP"
            android:layout_height="@dimen/DIMEN_46DP"
            android:layout_below="@id/bill_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_17DP"
            android:background="@drawable/shape_solid_e5344e_corners_200">

            <com.hzlz.aviation.library.widget.widget.AviationTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_save_to_gallery_share"
                android:drawablePadding="@dimen/DIMEN_7DP"
                android:text="@string/save_to_gallery_share"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>