<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/DIMEN_10DP"
        android:layout_height="wrap_content">

        <com.jxntv.widget.GVideoRImageView
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/DIMEN_6DP"
            android:layout_marginEnd="@dimen/DIMEN_6DP"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_soild_f7f7f7_corners_4dp"
            app:corner_radius="@dimen/DIMEN_4DP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,16:9" />

        <com.jxntv.widget.GVideoTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5DP"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.05"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            app:layout_constraintLeft_toLeftOf="@id/cover"
            app:layout_constraintRight_toRightOf="@id/cover"
            app:layout_constraintTop_toBottomOf="@id/cover"
            tools:text="1234567894567894123456789456789456945645645612345678945678945694564564561234567894567894569456456456569456456456" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>