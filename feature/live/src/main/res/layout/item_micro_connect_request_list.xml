<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_58DP"
        android:paddingStart="@dimen/DIMEN_14DP"
        android:paddingEnd="@dimen/DIMEN_14DP"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <com.hzlz.aviation.library.widget.widget.GVideoRImageView
            android:id="@+id/header"
            android:layout_width="@dimen/DIMEN_31DP"
            android:layout_height="@dimen/DIMEN_31DP"
            app:corner_radius="@dimen/DIMEN_93DP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hzlz.aviation.library.widget.widget.AviationImageView
            android:id="@+id/mark"
            android:layout_width="@dimen/DIMEN_13DP"
            android:layout_height="@dimen/DIMEN_13DP"
            android:background="@drawable/icon_header_authentication"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintRight_toRightOf="@id/header"
            tools:visibility="visible" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DIMEN_10DP"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxWidth="@dimen/DIMEN_80DP"
            android:paddingEnd="@dimen/DIMEN_29DP"
            android:singleLine="true"
            android:textColor="@color/color_4c4c4c"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintLeft_toRightOf="@id/header"
            app:layout_constraintRight_toLeftOf="@id/operator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="123456123456123456123456123456123456123456" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/color_7f7f7f"
            android:textSize="@dimen/sp_12"
            android:paddingEnd="@dimen/DIMEN_5DP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintRight_toLeftOf="@id/operator"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="123456789456789"
            tools:visibility="visible" />

        <com.hzlz.aviation.library.widget.widget.GVideoRTextView
            android:id="@+id/operator"
            android:layout_width="@dimen/DIMEN_54DP"
            android:layout_height="@dimen/DIMEN_23DP"
            tools:text="接受"
            android:gravity="center"
            android:textColor="@color/color_e4344e"
            android:background="@drawable/shape_stroke_1dp_e4344e_corners_200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/color_ebefc0"
            android:layout_height="1px" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>