<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slide_tab_bar_height"
    android:orientation="vertical">

    <com.jxntv.widget.GVideoConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/slide_tab_bar_height">

        <com.jxntv.base.view.tab.GVideoSmartTabLayout
            android:id="@+id/gvideo_tabs"
            style="@style/TabLayoutDefaultStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/DIMEN_50DP"
            android:layout_marginStart="@dimen/DIMEN_50DP"
            app:stl_distributeEvenly="false"
            />

        <com.jxntv.widget.GVideoImageView
            android:id="@+id/search_img"
            android:layout_width="@dimen/search_tab_bar_single_search_img_size"
            android:layout_height="@dimen/search_tab_bar_single_search_img_size"
            android:layout_marginLeft="@dimen/search_tab_bar_single_plus_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/plus_img"
            android:src="@drawable/feed_single_search_icon" />

        <com.jxntv.base.view.HomeMessageLayout
            android:id="@+id/plus_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </com.jxntv.widget.GVideoConstraintLayout>


</merge>