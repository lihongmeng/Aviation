<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <com.hzlz.aviation.library.widget.widget.AviationImageView
            android:id="@+id/tv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/DIMEN_14DP"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="h,16:9" />

        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            tools:text="123456123456123456123456123456123456123456123456123456123456123456123456123456123456123456123456"
            android:layout_marginLeft="@dimen/DIMEN_2DP"
            android:layout_marginRight="@dimen/DIMEN_2DP"
            android:layout_marginBottom="@dimen/DIMEN_15DP"
            app:layout_constraintLeft_toLeftOf="@id/tv_cover"
            app:layout_constraintRight_toRightOf="@id/tv_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_cover"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
