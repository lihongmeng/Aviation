<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="position"
      type="androidx.databinding.ObservableInt" />

    <variable
      name="adapter"
      type="com.hzlz.aviation.feature.test.splashdata.SplashDataAdapter" />

    <variable
      name="data"
      type="com.hzlz.aviation.feature.test.splashdata.SplashData" />
  </data>

  <com.hzlz.aviation.library.widget.widget.GVideoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{(v)->adapter.onItemClick(v,position)}">

    <com.hzlz.aviation.library.widget.widget.GVideoTextView
      android:id="@+id/text_view_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:text='@{data.text}'
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.hzlz.aviation.library.widget.widget.GVideoImageView
        android:id="@+id/image_view_name"
        android:layout_width="@dimen/DIMEN_100DP"
        android:layout_height="@dimen/DIMEN_100DP"
        app:imageData='@{data.source}'
        app:placeholder='@{@drawable/media_default_cover_bg}'
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_name" />
  </com.hzlz.aviation.library.widget.widget.GVideoConstraintLayout>
</layout>
