<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="adapter"
        type="com.jxntv.pptv.adapter.BannerAdapter"
        />

    <variable
        name="banner"
        type="com.jxntv.pptv.model.Banner"
        />

    <variable
        name="position"
        type="int"
        />
    <import type="android.text.TextUtils" />
    <import type="android.view.View" />
  </data>

  <com.jxntv.widget.GVideoConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/adapter_banner_padding"
      android:onClick="@{v->adapter.onItemRootViewClicked(v, position)}"
      >
    <com.jxntv.widget.GVideoImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:roundedCorners="@{@dimen/r_r01}"
        app:centerCrop="@{true}"
        app:imageData="@{banner.cover}"
        app:placeholder="@{@drawable/media_default_cover_bg}"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.jxntv.widget.GVideoImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_default_play"
        android:visibility="@{TextUtils.isEmpty(banner.cover) ? View.VISIBLE : View.GONE}"
        app:layout_constraintLeft_toLeftOf="@id/image"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        app:layout_constraintRight_toRightOf="@id/image"
        />

    <com.jxntv.widget.GVideoTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@{banner.name}"
        android:textSize="@dimen/t_font03"
        android:textColor="@color/t_color05"
        android:background="@drawable/banner_title_mask_cover"
        android:paddingTop="@dimen/adapter_banner_name_padding_top"
        android:paddingBottom="@dimen/adapter_banner_name_padding_bottom"
        android:paddingStart="@dimen/adapter_banner_name_padding_start"
        android:paddingEnd="@dimen/adapter_banner_name_padding_end"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
  </com.jxntv.widget.GVideoConstraintLayout>
</layout>
