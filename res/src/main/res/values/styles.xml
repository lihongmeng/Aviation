<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- 分割线 -->
  <style name="style_cutting_line01">
    <item name="android:layout_height">1pt</item>
    <item name="android:background">@color/c_line01</item>
  </style>

  <!-- 文字相关 -->
  <style name="style_t_font01">
    <item name="android:textSize">@dimen/t_font01</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="style_t_font02">
    <item name="android:textSize">@dimen/t_font02</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="style_t_font05">
    <item name="android:textSize">@dimen/t_font05</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="style_t_font06">
    <item name="android:textSize">@dimen/t_font06</item>
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="live_tag_layout">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingStart">@dimen/DIMEN_5DP</item>
    <item name="android:paddingEnd">@dimen/DIMEN_5DP</item>
    <item name="android:paddingTop">@dimen/DIMEN_1DP</item>
    <item name="android:paddingBottom">@dimen/DIMEN_1DP</item>
    <item name="android:layout_marginEnd">@dimen/DIMEN_5DP</item>
    <item name="android:layout_marginTop">@dimen/DIMEN_5DP</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="live_tag_layout_no_width_no_height">
    <item name="android:paddingTop">@dimen/DIMEN_1DP</item>
    <item name="android:paddingBottom">@dimen/DIMEN_1DP</item>
    <item name="android:layout_marginEnd">@dimen/DIMEN_5DP</item>
    <item name="android:layout_marginTop">@dimen/DIMEN_5DP</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="feed_text_style" parent="TextStyle.DefaultSpacing">
    <item name="android:textColor">@color/feed_title_text_color</item>
    <item name="android:textSize">@dimen/feed_title_text_size</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">3</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:outlineProvider">none</item>
  </style>

  <style name="feed_title_style" parent="TextStyle.DefaultSpacing_lsm_1_0_5">
    <item name="android:textSize">@dimen/sp_17</item>
    <item name="android:textColor">@color/feed_title_text_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingBottom">@dimen/DIMEN_9DP</item>
    <item name="android:layout_marginBottom">@dimen/DIMEN_7DP</item>
  </style>

  <style name="feed_text_style_wrap_wrap" parent="TextStyle.DefaultSpacing">
    <item name="android:textColor">@color/feed_title_text_color</item>
    <item name="android:textSize">@dimen/feed_title_text_size</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:outlineProvider">none</item>
  </style>

  <style name="feed_text_style_match_wrap" parent="TextStyle.DefaultSpacing">
    <item name="android:textColor">@color/feed_title_text_color</item>
    <item name="android:textSize">@dimen/feed_title_text_size</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:outlineProvider">none</item>
  </style>

  <style name="feed_text_style_news" parent="feed_text_style">
    <item name="android:textSize">@dimen/sp_17</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="feed_layout_margin_basic">
    <item name="android:layout_marginEnd">@dimen/feed_layout_margin</item>
    <item name="android:layout_marginStart">@dimen/feed_layout_margin</item>
  </style>

  <style name="feed_layout_margin" parent="@style/feed_layout_margin_basic">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="feed_layout_margin_220_320" parent="@style/feed_layout_margin_basic">
    <item name="android:layout_width">@dimen/DIMEN_220DP</item>
    <item name="android:layout_height">@dimen/DIMEN_320DP</item>
  </style>

  <style name="feed_layout_margin_toolbar_top" parent="feed_layout_margin">
    <item name="android:layout_marginTop">@dimen/DIMEN_5DP</item>
    <item name="android:layout_marginBottom">@dimen/DIMEN_10DP</item>
  </style>

  <style name="feed_layout_margin_toolbar_bottom_news" parent="feed_layout_margin">
    <item name="android:layout_marginTop">@dimen/DIMEN_8DP</item>
    <item name="android:layout_marginBottom">@dimen/DIMEN_14DP</item>
  </style>

  <style name="feed_layout_margin_root" >
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginTop">@dimen/DIMEN_14DP</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="feed_layout_line" >
    <item name="android:layout_height">@dimen/DIMEN_10DP</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">#f2f2f2</item>
  </style>

  <style name="feed_comment_img">
    <item name="android:layout_height">@dimen/DIMEN_36DP</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingEnd">@dimen/DIMEN_5DP</item>
    <item name="android:scaleType">center</item>
  </style>

  <style name="feed_comment_text">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/sp_12</item>
    <item name="android:textColor">#333333</item>
    <item name="android:layout_marginBottom">@dimen/DIMEN_1DP</item>
  </style>

  <style name="PrepareText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/DIMEN_54DP</item>
    <item name="android:textColor">@color/t_color01</item>
    <item name="android:textSize">@dimen/sp_15</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="PrepareEditText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/DIMEN_53DP</item>
    <item name="android:textColor">@color/t_color02</item>
    <item name="android:textSize">@dimen/sp_13</item>
    <item name="android:gravity">center_vertical|right</item>
    <item name="android:background">@null</item>
  </style>

  <style name="PrepareLineStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/DIMEN_D5P</item>
    <item name="android:background">@color/c_line01</item>
  </style>

  <!-- 提问按钮 -->
  <style name="StyleAskQuestionButton">
    <item name="android:layout_width">@dimen/DIMEN_54DP</item>
    <item name="android:layout_height">@dimen/DIMEN_24DP</item>
    <item name="android:textSize">@dimen/t_font04</item>
    <item name="android:background">@drawable/icon_question_yellow</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/color_333333</item>
    <item name="android:text">@string/ask_question</item>
  </style>

</resources>