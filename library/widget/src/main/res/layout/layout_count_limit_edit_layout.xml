<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--内容区域-->
        <com.hzlz.aviation.library.widget.widget.AviationEditText
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:hint="@string/hint_question"
            android:maxLength="50"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cccccc"
            android:textSize="@dimen/sp_19"
            android:maxLines="3"
            android:text="123456789451234567812345678945123456789456789123456781234567894512345678123456789451234567894567891234567894567891234567894567896789945678912345678945678912345678945678967899456789123456789456789678994567891234567894567891234567894567896789"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--字数-->
        <com.hzlz.aviation.library.widget.widget.AviationTextView
            android:id="@+id/content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/DIMEN_5DP"
            android:layout_marginBottom="@dimen/DIMEN_3DP"
            android:textColor="@color/color_c7c7c7"
            android:textSize="@dimen/sp_11"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10/30" />

        <!--底部分割线-->
        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e8e5e5"
            app:layout_constraintTop_toBottomOf="@id/content_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>